<!-- Wrapper-->
  <div id="wrapper">

    <!-- Nav -->
      <nav id="nav">
        <a href="#" class="icon solid fa-search"><span>Search</span></a>
        <a href="/index" class="icon solid fa-home"><span>Home</span></a>
        <a href="/index#work" class="icon solid fa-map"><span>Map</span></a>
        <a href="/index#chart" class="icon solid fa-list-ol"><span>Charts</span></a>
      </nav>

    <!-- Main -->
      <div id="main">

        <!-- Search -->
          <article id="search" class="panel">
            <header>
              <h2>搜尋您附近的失竊案件</h2>
            </header>
            <%= render partial: "searchbar" %>

            <% if @data != [] %>

              <div class="alert alert-warning" role="alert" style="font-weight:1000;radius:900px;">
                <%=  "以下為 [ %s%s ]  在 [台北市%s] 的 [%s] 事件(共%d筆資料)" % [params[:year],params[:month],params[:district],params[:type],@count] %>
              </div>

              <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">日期</th>
                    <th scope="col">時間</th>
                    <th scope="col">地點</th>
                  </tr>
                </thead>
                <tbody>

                  <% @data.each do |p| %>
                  <tr>
                    <td><%= p.date %></td>
                    <td><%= p.time %></td>
                    <td><%= p.location %></td>
                  </tr>
                  <% end %>
                </tbody>
              </table>

              <ul class="pagination justify-content-center">
                <%= paginate @data , :params => { :anchor => 'search' } , :remote => true %>
              </ul>
            <% else %>
              <script type="text/javascript">
                alert("很抱歉查無資料 請重新查詢" );
              </script>
            <% end %>


          </article>

      </div>

    <!-- Footer -->
      <div id="footer">
        <ul class="copyright">
