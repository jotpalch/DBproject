<!-- Wrapper-->
  <div id="wrapper">

    <!-- Nav -->
      <nav id="nav">
        <a href="#" class="icon solid fa-map"><span>Map</span></a>
        <a href="/index" class="icon solid fa-home"><span>Home</span></a>
        <a href="/index#search" class="icon solid fa-search"><span>Search</span></a>
        <a href="/index#chart" class="icon solid fa-list-ol"><span>Charts</span></a>
      </nav>

    <!-- Main -->
      <div id="main">

        <!-- map -->
          <article id="work" class="panel">
            <header>
              <h2>地址查詢附近監視器位置</h2>
            </header>
            <section>

              <%= render partial: "mapbar" %>

              <br>

              <div style='width: 100%;'>

              <div id="map" style='width: 100%; height: 720px;'></div>

              </div>

              <script type="text/javascript">
                handler = Gmaps.build('Google');
                handler.buildMap({
                  provider: {},
                  internal: {id: 'map'}},
                  function(){
                    markers = handler.addMarkers(<%=raw @hash.to_json %>);
                    handler.bounds.extendWith(markers);
                    handler.fitMapToBounds();
                  }
                );

              </script>
            </section>

            <table class="table table-striped">
              <thead>
                <tr>
                  <th>搜尋紀錄</th>
                  <th>Lat</th>
                  <th>Lng</th>
                  <th>時間</th>
                  <th colspan="4"></th>
                </tr>
              </thead>

              <tbody>
                <% @histories.each do |history| %>
                  <tr>
                    <td><%= history.q %></td>
                    <td><%= history.lat %></td>
                    <td><%= history.lng %></td>
                    <td><%= history.created_at.strftime("%Y-%m-%d %H:%M") %></td>
                    <td>
                      <a href= <%= "/history/#{history.id}" %>  class="icon solid fa-times" style="color: red;"></a>
                      </td>
                  </tr>
                <% end %>
              </tbody>
            </table>


          </article>


      </div>

    <!-- Footer -->
