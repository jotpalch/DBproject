<!-- Wrapper-->
  <div id="wrapper">

    <!-- Nav -->
      <nav id="nav">
        <a href="#" class="icon solid fa-list-ol"><span>Charts</span></a>
        <a href="/index" class="icon solid fa-home"><span>Home</span></a>
        <a href="/index#work" class="icon solid fa-map"><span>Map</span></a>
        <a href="/index#search" class="icon solid fa-search"><span>Search</span></a>
      </nav>

    <!-- Main -->
      <div id="main">

        <!-- chart -->
        <article id="chart" class="panel">
          <header>
            <h2>台北市各區失竊事件數量圖表</h2>
          </header>

          <%= render partial: "chartbar" %>

          <div class="alert alert-warning" role="alert" style="font-weight:1000;radius:900px;">
            <%=  "以下為 [ %s%s ]  的台北市各區失竊事件數量圖表" % [params[:year],params[:month]] %>
          </div>

          <% 0.upto(3) do |i| %>

          <div class="container">
              <h3><%= @name[i] %></h3>
              <canvas id=<%=@name[i]%> width="500" height="200" data-labels="<%= @chart[i].keys %>" data-data="<%= @chart[i].values %> "</canvas>
              <br>
          </div>

          <script type='text/javascript'>
          var ctx = document.getElementById('<%=@name[i]%>');
          var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
              labels: JSON.parse(ctx.dataset.labels),
              datasets: [{
                label: " <%=@name[i]%> ",
                fill: false,
                data: JSON.parse(ctx.dataset.data),
                backgroundColor: [
                  'rgba(238, 183, 166, 0.9)',
                  'rgba(238, 183, 166, 0.6)',
                  'rgba(238, 183, 166, 0.5)',
                  'rgba(238, 183, 166, 0.3)',
                  'rgba(238, 183, 166, 0.2)',
                  'rgba(64, 64, 64, 0.1)'
                ],
                borderColor: 'rgb(160, 120, 50, 0.7)',
                borderWidth: 2
              }]
            },
            options: {
              scales: {
                y: { // defining min and max so hiding the dataset does not change scale range
                    min: 0,
                    max: 1000
                  },
                yAxes: [{
                  ticks: {
                    beginAtZero: true
                  }
                }]
              }
            }
          });
          </script>
          <% end %>

        </article>

      </div>

